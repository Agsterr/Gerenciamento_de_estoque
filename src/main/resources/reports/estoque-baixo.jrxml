<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="estoque-baixo" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <property name="net.sf.jasperreports.export.xlsx.detect.cell.type" value="true"/>
    <property name="net.sf.jasperreports.export.xlsx.one.page.per.sheet" value="false"/>
    <property name="net.sf.jasperreports.export.xlsx.white.page.background" value="false"/>

    <parameter name="TITULO" class="java.lang.String"/>
    <parameter name="ORGANIZACAO_ID" class="java.lang.Long"/>
    <parameter name="DATA_GERACAO" class="java.lang.String"/>

    <field name="id" class="java.lang.Long"/>
    <field name="nome" class="java.lang.String"/>
    <field name="preco" class="java.math.BigDecimal"/>
    <field name="quantidade" class="java.lang.Integer"/>
    <field name="quantidadeMinima" class="java.lang.Integer"/>
    <field name="categoriaNome" class="java.lang.String"/>

    <!-- Variáveis -->
    <variable name="V_COUNT" class="java.lang.Long" calculation="Count">
        <variableExpression><![CDATA[$F{id}]]></variableExpression>
    </variable>

    <variable name="V_QTD_SUM" class="java.lang.Long" calculation="Sum">
        <variableExpression><![CDATA[$F{quantidade} == null ? 0L : $F{quantidade}.longValue()]]></variableExpression>
    </variable>

    <variable name="V_ADMIN_SUM" class="java.lang.Long" calculation="Sum">
        <variableExpression><![CDATA[$F{quantidadeMinima} == null ? 0L : $F{quantidadeMinima}.longValue()]]></variableExpression>
    </variable>

    <!-- BigDecimal: variableExpression PRIMEIRO, depois initialValueExpression -->
    <variable name="V_VALOR_TOTAL" class="java.math.BigDecimal" calculation="Sum" resetType="Report" incrementType="None">
        <variableExpression><![CDATA[
            ($F{preco} == null || $F{quantidade} == null)
                ? java.math.BigDecimal.ZERO
                : $F{preco}.multiply(java.math.BigDecimal.valueOf($F{quantidade}.longValue()))
        ]]></variableExpression>
        <initialValueExpression><![CDATA[new java.math.BigDecimal("0.00")]]></initialValueExpression>
    </variable>

    <title>
        <band height="70">
            <textField>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center"><font size="18" isBold="true"/></textElement>
                <textFieldExpression><![CDATA[$P{TITULO} != null ? $P{TITULO} : "Relatório de Produtos com Estoque Baixo"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="35" width="555" height="20"/>
                <textElement textAlignment="Center"><font size="10"/></textElement>
                <textFieldExpression><![CDATA["Gerado em: " + ($P{DATA_GERACAO} != null ? $P{DATA_GERACAO} : "")]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="55" width="555" height="15"/>
                <textElement textAlignment="Center"><font size="9"/></textElement>
                <textFieldExpression><![CDATA["Org ID: " + ($P{ORGANIZACAO_ID} != null ? $P{ORGANIZACAO_ID}.toString() : "-")]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="0" width="50" height="30"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="50" y="0" width="150" height="30"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Nome]]></text>
            </staticText>
            <staticText>
                <reportElement x="200" y="0" width="100" height="30"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Categoria]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="80" height="30"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Preço]]></text>
            </staticText>
            <staticText>
                <reportElement x="380" y="0" width="80" height="30"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Qtd Atual]]></text>
            </staticText>
            <staticText>
                <reportElement x="460" y="0" width="95" height="30"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Qtd Mínima]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="50" height="20"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="50" y="0" width="150" height="20"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{nome}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="100" height="20"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{categoriaNome}]]></textFieldExpression>
            </textField>
            <textField pattern="¤ #,##0.00">
                <reportElement x="300" y="0" width="80" height="20"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{preco}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="380" y="0" width="80" height="20"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{quantidade}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="460" y="0" width="95" height="20"/><box><pen lineWidth="1"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{quantidadeMinima}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <columnFooter>
        <band height="40">
            <staticText>
                <reportElement x="0" y="5" width="250" height="15"/>
                <textElement textAlignment="Left"><font isBold="true"/></textElement>
                <text><![CDATA[Total de itens listados:]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="20" width="250" height="15"/>
                <textElement textAlignment="Left"><font isBold="true"/></textElement>
                <text><![CDATA[Soma das quantidades:]]></text>
            </staticText>
            <staticText>
                <reportElement x="280" y="5" width="180" height="15"/>
                <textElement textAlignment="Left"><font isBold="true"/></textElement>
                <text><![CDATA[Soma das quantidades mínimas:]]></text>
            </staticText>
            <staticText>
                <reportElement x="280" y="20" width="180" height="15"/>
                <textElement textAlignment="Left"><font isBold="true"/></textElement>
                <text><![CDATA[Valor total em estoque:]]></text>
            </staticText>

            <textField>
                <reportElement x="200" y="5" width="60" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$V{V_COUNT}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="200" y="20" width="60" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$V{V_QTD_SUM}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="480" y="5" width="75" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$V{V_ADMIN_SUM}]]></textFieldExpression>
            </textField>

            <textField pattern="¤ #,##0.00">
                <reportElement x="430" y="20" width="125" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$V{V_VALOR_TOTAL}]]></textFieldExpression>
            </textField>
        </band>
    </columnFooter>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="455" y="0" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="1"/>
    </summary>

    <noData>
        <band height="40">
            <staticText>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center"><font size="12" isBold="true"/></textElement>
                <text><![CDATA[Nenhum registro encontrado.]]></text>
            </staticText>
        </band>
    </noData>

</jasperReport>
